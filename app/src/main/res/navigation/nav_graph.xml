<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.beleavemebe.solevarnya.view.search.SearchFragment"
        android:label="@string/search_songs"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/toSongDetails"
            app:destination="@id/songFragment" />
    </fragment>
    <fragment
        android:id="@+id/songFragment"
        android:name="com.beleavemebe.solevarnya.view.song.SongFragment"
        android:label="{songTitle}"
        tools:layout="@layout/fragment_song">
        <argument
            android:name="songId"
            app:argType="string"/>
        <argument
            android:name="songTitle"
            app:argType="string"/>
    </fragment>
</navigation>
