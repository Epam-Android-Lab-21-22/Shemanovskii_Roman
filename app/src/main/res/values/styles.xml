<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabTextAppearance" parent="">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="ItemSubtitle" parent="">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ItemAvatar">
        <item name="shapeAppearance">@style/CircleImageView</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ItemButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="background">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_smaller</item>
    </style>
</resources>