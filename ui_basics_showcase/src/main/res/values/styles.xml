<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.StoryImage" parent="">
        <item name="android:scaleType">centerCrop</item>
        <item name="strokeColor">@color/green_90</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.StoryCardView" parent="">
        <item name="android:layout_width">@dimen/cv_story_width</item>
        <item name="android:layout_height">@dimen/cv_story_height</item>
        <item name="android:layout_marginStart">@dimen/cv_story_margins</item>
        <item name="android:layout_marginEnd">@dimen/cv_story_margin_end</item>
        <item name="cardCornerRadius">@dimen/cv_story_margins</item>
    </style>

    <style name="CardView.RandomInfoCardView">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/cv_random_info_width</item>
        <item name="android:layout_height">@dimen/cv_random_info_height</item>
        <item name="android:layout_marginStart">@dimen/cv_random_info_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/cv_random_info_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/cv_random_info_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/cv_random_info_margin_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CardView.BankCard" parent="">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cv_bank_card_height</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextAppearance.StoryTitle" parent="">
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Balance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
